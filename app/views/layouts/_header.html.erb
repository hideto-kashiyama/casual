    alert(ejval);
   //var ejval= $("input[name='ej']:checked").val();　//
    
    if ( ejval==0 ) {
    //英語
   
       recognition.lang = 'en-US';
       
     } else {
    　　//日本語
    　　
    　　recognition.lang = 'ja';
      
    }
    
    recognition.start();
 
  }
   /*ここまで録音*/
 
</script>



